<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

<!--
colors="#ec7063:state == first;#2ecb71:state=='save';"
-->
        <record id="view_task_timeline" model="ir.ui.view">
            <field name="model">lowyer.trans</field>
            <field name="type">timeline</field>
            <field name="arch" type="xml">
                <timeline date_start="datemin"
                          date_stop="datemax"
                          default_group_by="idLowyer"
                          event_open_popup="true" colors="#ec7063:state == 'first';#2ecb71:state=='save';">
                    <field name="idCust"/>
                    <templates>
                        <div t-name="timeline-item">
                            <div t-esc="record.display_name"/>
                            Customer:
                            <span t-esc="record.idCust"/>
                        </div>

                    </templates>
                </timeline>
            </field>
        </record>


        <record  id="lowyer_trans_calendar" model="ir.ui.view">
            <field name="name">lowyer.trans.calendar</field>
            <field name="model">lowyer.trans</field>
            <field name="arch" type="xml">
                <calendar string="Transaction calendar" date_start="datemax"
                           color="idLowyer" mode="month" quick_add="False">
                    <field name="kadId"/>
                    <field name="idLowyer"/>
                </calendar>
            </field>
        </record>


          <record id="lowyer_trans_kanban_view" model="ir.ui.view">
            <field name="name">lowyer.trans.kanban</field>
            <field name="model">lowyer.trans</field>
            <field name="arch" type="xml">
                <kanban default_group_by="idLowyer">
                    <field name="seq_id"/>
                    <field name="idCust"/>
                    <field name="court"/>
                    <field name="idLowyer"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                 <t>
                                    <img class="o_kanban_image" alt="Avatar"
                                         t-att-src='_s + "/base/static/img/avatar.png"'/>
                                </t>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title"><field name="display_name"/></strong>
                                    <div class="o_kanban_tags_section"/>
                                    <ul>
                                        <li>name : <field name="idCust"/>  </li>
                                        <li>Lowyer :<field name="idLowyer"/> </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                        <searchpanel>
<field name="idLowyer" icon="fa-building"/>
<field name="idLowyer" select="multi" icon="fa-tags"/>
</searchpanel>

                    </templates>
                </kanban>
            </field>
        </record>



        <record id="lowyer_trans_image_form" model="ir.ui.view">
            <field name="name">lowyer.trans.image.form</field>
            <field name="model">lowyer.trans.image</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="note"/>
                        </group>

                        <group>
                            <field name="image" widget="image" class="oe_avatar"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="lowyer_trans_date_form" model="ir.ui.view">
            <field name="name">lowyer.trans.date.form</field>
            <field name="model">lowyer.trans.date</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="transDate"/>
                        </group>

                        <group>
                            <field name="note"/>
                        </group>

                        <group>
                            <field name="toDate"/>
                        </group>

                        <group>
                            <field name="sgn" widget="signature"/>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

         <record id="lowyer_trans_pivot" model="ir.ui.view">
            <field name="name">lowyer.trans.pivot</field>
            <field name="model">lowyer.trans</field>
            <field name="arch" type="xml">
                <pivot string="Transaction Pivot">
                    <field name="idLowyer" type="row"/>
                    <field name="datemax" type="col" interval="day"/>
                </pivot>
            </field>
        </record>

        <record id="lowyer_trans_graph" model="ir.ui.view">
            <field name="name">lowyer.trans.graph</field>
            <field name="model">lowyer.trans</field>
            <field name="arch" type="xml">
                <graph string="Transaction" type="pie">
                    <field name="idType"/>
                    <field name="amount" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="lowyer_trans_tree" model="ir.ui.view">
            <field name="name">lowyer.trans.tree</field>
            <field name="model">lowyer.trans</field>
            <field name="arch" type="xml">
                <tree decoration-info="state=='first'" decoration-success="state == 'save'" decoration-warning="state=='reject'">
                    <field name="seq_id" string="Sequence"/>
                    <field name="idCust" string="Customer"/>
                    <field name="year" string="Year"/>
                    <field name="court" string="Court"/>
                    <field name="idType" string="Type"/>
                    <field name="crc" string="circle"/>
                    <field name="kadId" string="Case Number"/>
                    <field name="amount" string="Amount" sum="Total"/>
                    <field name="state" string="Status"/>
                </tree>
            </field>
        </record>

        <record id="lowyer_trans_srch" model="ir.ui.view">
            <field name="name">lowyer.trans.srch</field>
            <field name="model">lowyer.trans</field>
            <field name="arch" type="xml">
                <search string="Search Transaction">
                    <field name="idCust"
                           filter_domain="['|',('idCust' , 'ilike' , self) , (('court' , 'ilike' , self))]"/>
                    <field name="idCust" string="Customer Name"/>
                    <field name="court" string="Court Name"/>
                </search>
            </field>
        </record>


        <record id="lowyer_trans_form" model="ir.ui.view">
            <field name="name">lowyer.trans.form</field>
            <field name="model">lowyer.trans</field>
            <field name="arch" type="xml">
                <form>
                    <header>


                        <button string="Send by Email"
                                type="object"
                                name="action_send_mail_trans"
                                states="first"
                                class="btn-primary"/>

                        <button string="First"
                                type="object"
                                name="pass_action"
                                states="first"
                                class="oe_hightlight"/>

                        <button string="Reject"
                                type="object"
                                name="pass_action_r"
                                states="save"
                                class="oe_hightlight"/>

                        <button string="Restart"
                                type="object"
                                name="pass_action_s"
                                states="reject"
                                class="oe_hightlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="first,save,reject"/>
                    </header>


                    <sheet>

                        <!--<div class="oe_button_box" name="button_box">-->
                        <!--<buttun name="action_send_mail_trans" type="object" string="Send By Email" class="oe_highlight"/>-->
                        <!--</div>-->

                        <!--<div class="oe_title">-->
                        <!--<buttun name="action_send_mail_trans" type="object" string="Send By Email" class="oe_highlight"/>-->
                        <!--</div>-->


                        <div class="oe_title">
                            <h1>
                                <field name="seq_id" readonly="1"/>
                            </h1>
                        </div>
                        <group>

                            <group>
                                <field name="idCust" string="Customer Name"/>
                            </group>
                            <group>
                                <field name="sfth" string="Description"/>
                            </group>

                            <group>
                                <field name="name_eng"/>
                            </group>
                            <group>
                                <field name="name_eng_upper"/>
                            </group>

                            <group>
                                <field name="amount" string="Amount"/>
                            </group>
                            <group>
                                <field name="nokd" string="Case number"/>
                            </group>
                            <group>
                                <field name="year" string="Year"/>
                            </group>
                            <group>
                                <field name="court" string="Court Name"/>
                            </group>
                            <group>
                                <field name="idType" string="TypeXX"/>
                            </group>
                            <group>
                                <field name="crc" string="Circle Name"/>
                            </group>
                            <group>
                                <field name="idLowyer" string="Lowyer Name"/>
                            </group>
                            <group>
                                <field name="khsm" string="opponent name"/>
                            </group>
                            <group>
                                <field name="sfth_khsm" string="opponent Description"/>
                            </group>
                            <group>
                                <field name="address" string="Address"/>
                            </group>
                            <group>
                                <field name="subject" string="Subject"/>
                            </group>

                            <group>
                                <field name="email" widget="email"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="History of movements">
                                <field name="idtransDate">
                                    <tree>
                                        <field name="transDate" string="Transaction Date"/>
                                        <field name="note" string="Notes"/>
                                        <field name="toDate" string="Date To"/>

                                    </tree>
                                </field>
                            </page>
                            <page string="Contents of the file">
                                <field name="idtransImage">
                                    <tree  editable="bottom">
                                         <field name="sequence" widget="handle"/>
                                        <field name="note" string="Notes"/>
                                        <field name="image" string="Attachment"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" option="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>
    </data>
</odoo>